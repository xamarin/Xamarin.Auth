<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuthExample.Views.MainPage"
             Title="{Binding ProviderName}"
             >
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand"  HorizontalOptions="CenterAndExpand" >
            <Label Text="USER: " FontAttributes="Bold" />
            <Label Text="{Binding UserEmail}"  />
            <Label Text="PROVIDER TOKEN: " FontAttributes="Bold" />
            <Label Text="{Binding ProviderToken}"  />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>